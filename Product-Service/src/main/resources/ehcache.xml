<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3
        http://www.ehcache.org/schema/ehcache-core.xsd">

    <cache alias="com.example.Product_Service.entity.ProductEntity">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>

        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache>
</config>

<!--This file says that the cache expires after 5 mins
    and maximum 100 entries are stored in the memory
     After 5 min the DB is hit again-->